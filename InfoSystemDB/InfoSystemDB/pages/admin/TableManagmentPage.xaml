<Page x:Class="InfoSystemDB.TableManagmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:InfoSystemDB"
      mc:Ignorable="d"
      Title="TableManagmentPage" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" Grid.Row="0" FontSize="35" Margin="20" Content="Кольори" />
        <Button Grid.Column="1" Grid.Row="0" FontSize="35" Margin="20" Content="Матеріали" />
        <Button Grid.Column="0" Grid.Row="1" FontSize="35" Margin="20" Content="Знижки" />
        <Button Grid.Column="1" Grid.Row="1" FontSize="35" Margin="20" Content="Типи виробів" />
        <Button Grid.Column="1" Grid.Row="2" FontSize="25" Margin="20" Content="Назад" Width="150" HorizontalAlignment="Right" />
    </Grid>
</Page>
