<Page x:Class="InfoSystemDB.BuyerListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:InfoSystemDB"
      mc:Ignorable="d"
      Title="BuyerListPage" Height="700" Width="1200">
    <Border CornerRadius="50, 50, 50, 50">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Black" Offset="0.0" />
                <GradientStop Color="White" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="550" />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <DataGrid Grid.Row="0" Margin="60, 30, 60, 0" x:Name="DGridBuyers" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="17" Width="200" Header="Нік" Binding="{Binding nick}" />
                    <DataGridTextColumn FontSize="17" Width="*" Header="Прізвище" Binding="{Binding surname}" />
                    <DataGridTextColumn FontSize="17" Width="*" Header="Ім'я" Binding="{Binding nname}" />
                    <DataGridTextColumn FontSize="17" Width="250" Header="Номер телефону" Binding="{Binding tel}" />
                </DataGrid.Columns>
            </DataGrid>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" FontSize="20" Click="Add" Content="Додати" Margin="60, 30, 15, 30" />
                <Button Grid.Column="1" FontSize="20" Click="Edit" Content="Редагувати" Margin="30" />
                <Button Grid.Column="2" FontSize="20" Click="Delete" Content="Видалити" Margin="15, 30, 60, 30" />
            </Grid>
        </Grid>
    </Border>
</Page>