<Window x:Class="InfoSystemDB.DocumentPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:InfoSystemDB"
        mc:Ignorable="d"
        Title="DocumentPreviewWindow" Height="720" Width="1200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Перегляд документу" FontSize="18" FontWeight="Bold" Margin="10" />

        <Frame Grid.Row="1" Name="contentFrame" Width="1150" Height="550" Margin="10" />
        
        <Button Grid.Row="2" Content="Друк" FontSize="20" HorizontalAlignment="Center" Margin="10" Width="200" Click="PrintButton_Click" />
    </Grid>
</Window>