<Page x:Class="InfoSystemDB.RegularBuyers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:InfoSystemDB"
      mc:Ignorable="d"
      Title="RegularBuyers" Background="White" >
    <Grid>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" x:Name="DGBuyers">
            <DataGrid.Columns>
                <DataGridTextColumn FontSize="17" Header="Покупець" Width="*" Binding="{Binding Buyer}" />
                <DataGridTextColumn FontSize="17" Header="К-ть замовлень" Width="150" Binding="{Binding OrderCount}" />
                <DataGridTextColumn FontSize="17" Header="К-ть товарів" Width="150" Binding="{Binding ProductCount}" />
                <DataGridTextColumn FontSize="17" Header="Загальна сума замовлень" Width="150" Binding="{Binding TotalSum}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>