<Page x:Class="InfoSystemDB.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:InfoSystemDB"
      mc:Ignorable="d"
      Title="AdminMenuPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Button Content="Товари" Grid.Column="1" Grid.Row="1" FontSize="20" />
        <Button Content="Менеджери" Grid.Column="1" Grid.Row="3" FontSize="20" />
        <Button Content="Кольори" Grid.Column="1" Grid.Row="5" FontSize="20" />
        <Button Content="Вийти" Grid.Column="1" Grid.Row="7" FontSize="20" />
    </Grid>
</Page>
